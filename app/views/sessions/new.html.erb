<div class="login-container">
  <div>
    <h1 class="title">Log in</h1>
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>:
      <%= f.email_field :email, class: 'input is-primary logininput' %>
      <%= f.label :password %>:
      <%= f.password_field :password, class: 'input is-primary logininput' %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "is-primary" %>
        <span>Remember me</span>
      <% end %>
      <br>
      <%= f.submit "Log in", class: "button is-primary loginbtn" %>
    <% end %>
    <p class="signup-on-login">Don't have an account?<%= link_to " Create Your Account Now!", signup_path, class: "signuplink" %></p>
  </div>
</div>
